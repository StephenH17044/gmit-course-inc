//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Class Varibles Declaration//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////         
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

ReadSensor TempSensor = ReadSensor(PIN_SENSOR,100);        // CLASS DEPTHSENSOR(SENSOR NAME, ONTIME)
Relay RL = Relay(PIN_RELAY,2.5);                           // CLASS RELAY(RELAY NAME, SETPOINT)

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Program Setup///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////         
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void setup() { 
  Serial.begin(9600);                                         
  TempSensor.Initialize();                                            //Initialize Values in LightSensor Array
}                                                             

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Main Program////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////         
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void loop() {
  TempSensor.SmoothInput();                                           //Read and Smooth Input                                          
  RL.check(RL.computePID(TempSensor.getVoltage()));                   //Check Conditions Around Setpoint
}
